---
const {image, header, p1, p2} = Astro.props;
---

<section>
    <div class="div1">
        <img src={`/banner/${image}`} alt="Header billede" /> </div><div class="div2"><h1>{header}</h1><p class="p1">{p1}</p><p class="p2">{p2}</p2></div>
</section>

<style>
section {
    display: grid; 
    grid-template-columns: repeat(2, 1fr); 
}
.div1 { 
    grid-area: 1 / 1 / 3 / 3; 
    
} 
.div2 { 
    grid-area: 2 / 1 / 3 / 3;
    align-self: end; 
    padding-block: var(--padding-xs);
    padding-bottom: var(--padding-m);
    padding-inline: var(--default-inline);
    
}
h1, .p1, .p2 {
    color: var(--lighter-white);
    padding-top: var(--padding-xs);
}

img{
    width: 100%;
    object-fit: cover;
}

.p1, .p2{
    display: none;
}

@media screen and (min-width: 750px){
    .p1, .p2{
    display: block;
    }

    img{
        height: 28rem;
    }
    
}


}

</style>