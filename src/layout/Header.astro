    </nav>
  </div>
</header>

<style>
  header{
    display: flex;
    justify-content: space-between;
  }
  .main-menu {
    display: flex;
    justify-content: space-between;
    padding-inline: 1rem;
  }
  .left-menu {
    display: flex;
    gap: 1rem;
  }

  /* Burger menu button */
  .burger-menu-btn {
    display: block;
    width: 40px;
    height: 40px;
    background-color: transparent;
    border: none;
    cursor: pointer;
  }

  .burger-icon {
    display: block;
    width: 20px;
    height: 2px;
    background-color: #333;
    position: relative;
  }

  .burger-icon:before,
  .burger-icon:after {
    content: "";
    display: block;
    width: 100%;
    height: 2px;
    background-color: #333;
    position: absolute;
  }

  .burger-icon:before {
    top: -7px;
  }

  .burger-icon:after {
    bottom: -7px;
  }

  /* Burger menu */
  .burger-menu {
    display: none;
    position: absolute;
    top: 50px; /* Adjust as needed */
    right: 0;
    background-color: #fff;
    border: 1px solid #ddd;
    padding: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  /* Show menu */
  .burger-menu.show {
    display: block;
  }

  /* Menu item styling */
  .burger-menu a {
    display: block;
    color: #333;
    text-decoration: none;
    padding: 5px 0;
  }

  .burger-menu a:hover {
    background-color: #f5f5f5;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const burgerMenuBtn = document.querySelector(".burger-menu-btn");
    const burgerMenu = document.querySelector(".burger-menu");

    burgerMenuBtn.addEventListener("click", function () {
      burgerMenu.classList.toggle("show");
    });
  });
</script>
