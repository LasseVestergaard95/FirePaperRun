---
import Button from "../components/Button.astro";
---

<header>
  <nav>
    <div class="desktop_menu">
      <a href="/"><img src="/logo/fpr-sort-monogram.svg" alt="FirePaperRun logo" /></a>

      <a href="/">Køb Produkter</a>
      <a href="/gips">Arbejd med gips</a>
      <a href="/keramik">Arbejd med keramik</a>
      <a href="/om">Om os</a>
      <Button type="primary">Book Workshop</Button>
      <a href="/"><img class="vogn" src="/logo/shoppingcart.svg" alt="shoppingcart"></a>
    </div>

    <div class="mobile_menu">
      <a href="/"><img class="logo" src="/logo/fpr-sort-monogram.svg" alt="FirePaperRun logo" /></a>
      <div class="mobile_menu_right">
        <a href="/"><img class="vogn" src="/logo/shoppingcart.svg" alt="shoppingcart"></a>
        <div class="burger-menu-btn">
          <span></span>
          <span></span>
          <span></span>
        </div>
        <div class="burger-menu">
          <a href="/book_workshop">Book Workshop</a>
          <a href="/">Køb Produkter</a>
          <a href="/gips">Arbejd med gips</a>
          <a href="/keramik">Arbejd med keramik</a>
          <a href="/om">Om os</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    padding-inline: 0.7rem;
    padding-block: 1rem;
  }
  nav, .mobile_menu {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }
  img {
    max-width: 2.5rem;
  }
  .workshop-btn {
    display: none;
  }

  /* Burger menu button */
  .burger-menu-btn {
    width: 30px;
    height: 40px;
    background-color: transparent;
    border: none;
    cursor: pointer;
  }

  .burger-menu-btn span{
    display: block;
    width: 100%;
    height: 2px;
    background-color: var(--dark-black);
    border-radius: 5px;
    margin-bottom: 7px;
  }
.vogn{
    width: 30px;
    height: 40px;
  }

  .mobile_menu_right{
    display: flex;
    flex-direction: row;
    gap: 30px;
    align-items: center;
  }
  /*Burger animation*/
  



  

 

  /* Burger menu */
  .burger-menu {
    z-index: 999;
    display: none;
    position: absolute;
    top: 70px;
    right: 0;
    background-color:var(--light-white);
    padding-inline: 1rem;
    padding-block: 3rem;
    height: 100vh;
    width: 100vw;
    text-align: center;
    font-size: var(--mob-h1-size);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  /* Show menu */
  .burger-menu.show {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* Menu item styling */
  .burger-menu a {
    display: block;
    color: var(--dark-black);
    text-decoration: none;
    padding: 5px 0;
  }

  .burger-menu:hover{
    cursor: pointer;
  }

  .burger-menu a:hover {
font-weight: var(--mob-h1-weight-default);
  }

  body.no_scroll {
  overflow: hidden;
}

.desktop_menu{
display: none;
}




/*DESKTOP*/
@media screen and (min-width: 750px) {

.mobile_menu{display: none;}

header{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: auto;
  padding-inline: 0.7rem;
  padding-block: 1rem;
}

  nav {
    display: flex;
    justify-content: space-between;
  }
  img {
    max-width: 2.5rem;
  }

}

</style>

<script>
  // Nedenstående funktion toggler vores burger menu on and off. Derudover skal det ikke være muligt at scrolle når den er aktiv så derfor er .no_scroll tilføjet samtidig.
  
  document.addEventListener("DOMContentLoaded", function () {
    const burgerMenuBtn = document.querySelector(".burger-menu-btn");
    const burgerMenu = document.querySelector(".burger-menu");
    const body = document.body;

    burgerMenuBtn.addEventListener("click", function () {
      burgerMenu.classList.toggle("show");
      body.classList.toggle("no_scroll");
    });
  });
</script>
